<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('layouts/header'); %>

    <title>Duyệt tour</title>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->

      <%-include ('layouts/navbar'); %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div class="main-content">
          <div class="page-content">
            <div class="container-fluid">
              <!-- start page title -->
              <div class="row">
                <div class="col-12">
                  <div
                    class="page-title-box d-flex align-items-center justify-content-between"
                  >
                    <h4 class="mb-0 font-size-18">Duyệt tour</h4>
                  </div>
                </div>
              </div>
              <!-- end page title -->

              <div class="row">
                <div class="col-12">
                  <div class="card">
                    <form
                      method="POST"
                      action="/nonverifiedtours/view/<%= dataTour.id %>"
                      enctype="multipart/form-data"
                    >
                      <div class="card-body">
                        <div class="row">
                          <div class="col-12 col-sm-auto mb-3">
                            <div class="mx-auto" style="width: 600px">
                              <div
                                class="d-flex justify-content-center align-items-center rounded"
                                style="
                                  height: 335px;
                                  background-color: rgb(233, 236, 239);
                                "
                              >
                                <img
                                  id="img"
                                  src="<%= dataTour.tourguideImageCover %>"
                                  alt="img"
                                  class="rounded mx-auto d-block"
                                  style="width: 600px; height: 335px"
                                />
                              </div>
                            </div>
                          </div>
                          <div
                            class="col d-flex flex-column flex-sm-row justify-content-between mb-3"
                          >
                            <div class="mt-0">
                              <label for="upload">
                                <span
                                  class="fas fa-upload"
                                  aria-hidden="true"
                                ></span>
                                <input
                                  type="file"
                                  id="upload"
                                  accept="image/*"
                                  name="image"
                                  style="display: none"
                                />
                              </label>
                            </div>
                          </div>
                        </div>

                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            >ID HDV</label
                          >
                          <div class="col-md-10">
                            <input
                              class="form-control"
                              type="text"
                              value="<%= dataTour.tourguideID %>"
                              id="example-text-input"
                              readonly
                            />
                          </div>
                        </div>
                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            >ID Thành phố</label
                          >
                          <div class="col-md-10">
                            <input
                              class="form-control"
                              type="text"
                              value="<%= dataTour.cityID %>"
                              id="example-text-input"
                              readonly
                            />
                          </div>
                        </div>
                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            >Tên tour</label
                          >
                          <div class="col-md-10">
                            <input
                              class="form-control"
                              type="text"
                              value="<%= dataTour.name %>"
                              id="example-text-input"
                              name="name"
                            />
                          </div>
                        </div>
                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            >Loại hình</label
                          >
                          <div class="col-md-10">
                            <input
                              class="form-control"
                              type="text"
                              value="<%= dataTour.category %>"
                              id="example-text-input"
                              name="category"
                            />
                          </div>
                        </div>
                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            >Giới thiệu</label
                          >
                          <div class="col-md-10">
                            <textarea
                              class="form-control"
                              type="text"
                              id="example-text-input"
                              name="introduce"
                            >
  <%=dataTour.introduce %></textarea
                            >
                          </div>
                        </div>

                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            >Mô tả</label
                          >
                          <div class="col-md-10">
                            <textarea
                              class="form-control"
                              type="text"
                              id="example-text-input"
                              name="description"
                            >
<%=dataTour.description %></textarea
                            >
                          </div>
                        </div>
                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            ><b>Lịch trình</b></label
                          >
                        </div>
                        <% for(let [index, schedule] of
                        dataTour.scheduleDetail.entries()){ %>
                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            ><%= schedule.name %></label
                          >
                          <div class="col-md-10">
                            <input
                              class="form-control"
                              type="text"
                              value="<%= schedule.detail %>"
                              id="example-text-input"
                              name="category"
                              readonly
                            />
                          </div>
                        </div>
                        <% } %>
                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            >Đánh giá</label
                          >
                          <div class="col-md-10">
                            <input
                              class="form-control"
                              type="text"
                              value="<%= dataTour.avgRating %> sao"
                              id="example-text-input"
                              name="avgRating"
                              readonly
                            />
                          </div>
                        </div>
                        <div class="form-group row">
                          <label
                            for="example-text-input"
                            class="col-md-2 col-form-label"
                            >Lượt đánh giá</label
                          >
                          <div class="col-md-10">
                            <input
                              class="form-control"
                              type="text"
                              value="<%= dataTour.numRatings %> lượt"
                              id="example-text-input"
                              name="numRatings"
                              readonly
                            />
                          </div>
                        </div>
                      </div>
                      <br />
                      <button
                        type="button"
                        class="btn btn-primary"
                        data-toggle="modal"
                        data-target="#exampleModalCenter"
                      >
                        Duyệt
                      </button>
                      <button
                        type="button"
                        class="btn btn-secondary"
                        onclick="history.back(-1)"
                      >
                        Hủy bỏ
                      </button>
                      <!-- end row -->

                      <!-- End Page-content -->

                      <!-- Modal -->
                      <div
                        class="modal fade"
                        id="exampleModalCenter"
                        tabindex="-1"
                        role="dialog"
                        aria-labelledby="exampleModalCenterTitle"
                        aria-hidden="true"
                      >
                        <div
                          class="modal-dialog modal-dialog-centered"
                          role="document"
                        >
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5
                                class="modal-title"
                                id="exampleModalLongTitle"
                              >
                                Xác nhận
                              </h5>
                              <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                              >
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              Bạn có chắc chắn muốn chỉnh sửa?
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary"
                                data-dismiss="modal"
                              >
                                Hủy bỏ
                              </button>
                              <button type="submit" class="btn btn-primary">
                                Xác nhận
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>

                      <!-- End of Content Wrapper -->

                      <!-- End of Page Wrapper -->

                      <!-- Scroll to Top Button-->
                      <a class="scroll-to-top rounded" href="#page-top">
                        <i class="fas fa-angle-up"></i>
                      </a>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/previewImg.js" defer></script>
  </body>
</html>
