<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('layouts/header'); %>

    <title>Duyệt tour</title>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->

      <%-include ('layouts/navbar'); %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <div class="card shadow mb-4">
              <div class="card-header py-2">
                <h6 class="m-0 font-weight-bold text-primary">Duệt tour</h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr>
                        <th>ID HDV</th>
                        <th>ID Thành phố</th>
                        <th>Tên tour</th>
                        <th>Ảnh tour</th>
                        <th>Giới thiệu</th>
                        <th>Đánh giá</th>
                        <th>Tùy chỉnh</th>
                      </tr>
                    </thead>

                    <tbody id="tab">
                      <% for(let data of nonverifiedTours){ %>
                      <tr style="text-align: center">
                        <td><%= data.tourguideID %></td>
                        <td><%= data.cityID %></td>
                        <td><%= data.name %></td>
                        <td>
                          <img
                            src="<%= data.tourguideImageCover %>"
                            class="rounded mx-auto d-block"
                            style="width: 320px; height: 200px; padding: 0 0"
                          />
                        </td>
                        <td><%= data.introduce %></td>
                        <td><%= data.avgRating %> sao</td>
                        <td>
                          <div class="panel-footer row">
                            <!-- panel-footer -->
                            <div
                              style="
                                width: 100%;
                                display: flex;
                                justify-content: space-around;
                              "
                            >
                              <form
                                method="GET"
                                action="nonverifiedtours/view/<%= data.id %>"
                              >
                                <button type="submit" class="btn btn-primary">
                                  <span>Duyệt</span>
                                </button>
                              </form>
                              <button type="button" class="btn btn-danger">
                                <span
                                  class="delete"
                                  data-url="nonverifiedtours/delete/<%= data.id%>"
                                  >Xóa</span
                                >
                              </button>
                            </div>
                          </div>
                        </td>
                      </tr>

                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
    <script src="/js/deleteButton.js" defer></script>
  </body>
</html>
