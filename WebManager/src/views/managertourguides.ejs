<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('layouts/header'); %>

    <title>Manager Tour guides</title>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->

      <%-include ('layouts/navbar'); %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  Quản lý tourguides
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr>
                        <th>Họ tên</th>
                        <th>Ảnh</th>
                        <th>Email</th>
                        <th>City</th>
                        <th>Action</th>
                      </tr>
                    </thead>

                    <tbody id="tab">
                      <% for(let data of tourguides){ %>
                      <tr style="text-align: center">
                        <td><%= data.name %></td>
                        <td>
                          <img
                            src="<%= data.picture %>"
                            class="rounded mx-auto d-block"
                            style="width: 125px; height: 125px"
                          />
                        </td>
                        <td><%= data.email %></td>
                        <td><%= data.idCity %></td>
                        <td>
                          <form
                            method="GET"
                            action="/managertourguides/edit/<%= data.uID %>"
                            style="
                              width: 100%;
                              display: flex;
                              justify-content: space-around;
                            "
                          >
                            <button type="submit" class="btn btn-primary">
                              View
                            </button>
                            <button type="button" class="btn btn-danger">
                              <span
                                class="delete"
                                data-url="/managertourguides/delete/<%= data.id%>"
                                >Delete</span
                              >
                            </button>
                          </form>
                        </td>
                      </tr>

                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
    <script src="/js/deleteButton.js" defer></script>
  </body>
</html>
