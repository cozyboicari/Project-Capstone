<!DOCTYPE html>
<html lang="en">

<head>

  <%-include('layouts/header'); %>

  <title>ManagerProduct</title>

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->

    <%-include ('layouts/navbar'); %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <div class="container">
          <div class="row" style="padding-bottom: 20px">
            <div class="col-lg-12">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Thể loại:</span>
              </div>
              <select class="form-control" id="selectCategoryProduct">
                <option value="khaivi">Khai vị</option>
                <option value="Sashimi">Sashimi</option>
                <option value="Sushi">Sushi</option>
                <option value="Makimono">Makimono</option>
                <option value="Yakimoni">Yakimoni</option>
              </select>
            </div>
            <div class="col">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Tên sản phẩm:</span>
              </div>
              <input type="text" class="form-control" id="nameProduct" />
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Giá:</span>
              </div>
              <input type="text" class="form-control" id="priceProduct" />
            </div>
            <div class="col">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Ghi chú:</span>
              </div>
              <input type="text" class="form-control" id="noteProduct" />
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Hình ảnh:</span>
              </div>
              <input type="text" class="form-control" id="imgProduct" />
            </div>
          </div>
          <div id="ok">
            <button type="submit" onclick="save()" class="btn btn-primary">
              Save
            </button>
            <button type="button" onclick="reset()" class="btn btn-warning">
              reset
            </button>
          </div>
          <div id="edit"></div>
          <table id="tbl" class="table"></table>
        </div>
        <!-- Begin Page Content -->
        <div class="container-fluid">
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Quản lý sản phẩm</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3">Danh mục sản phẩm:</span>
                    <select class="form-control" id="selectCategory" onchange="changeCategory()">
                      <option value="khaivi">Khai vị</option>
                      <option value="Sashimi">Sashimi</option>
                      <option value="Sushi">Sushi</option>
                      <option value="Makimono">Makimono</option>
                      <option value="Yakimoni">Yakimoni</option>
                    </select>
                  </div>

                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="/auth/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/datatables-demo.js"></script>

</body>

</html>