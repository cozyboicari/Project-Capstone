<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('layouts/header'); %>

    <title>Manager Tour guides</title>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->

      <%-include ('layouts/navbar'); %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  Quản lý tourguides
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Tours</th>
                        <th>Visitors</th>
                        <th>Action</th>
                      </tr>
                    </thead>

                    <tbody id="tab">
                      <% for(let data of dataCities){ %>
                      <tr style="text-align: center">
                        <td><%= data.name %></td>
                        <td>
                          <img
                            src="<%= data.image %>"
                            class="rounded mx-auto d-block"
                            style="width: 320px; height: 200px; padding: 0 0"
                          />
                        </td>
                        <td><%= data.tours.length %></td>
                        <td><%= data.visitors %></td>
                        <td>
                          <div class="panel-footer row">
                            <!-- panel-footer -->

                            <form
                              method="GET"
                              action="cities/edit/<%= data.idCity %>"
                              style="
                                width: 100%;
                                display: flex;
                                justify-content: space-around;
                              "
                            >
                              <button type="submit" class="btn btn-primary">
                                <span>View</span>
                              </button>
                              <button type="button" class="btn btn-danger">
                                <span>Delete</span>
                              </button>
                            </form>
                          </div>
                        </td>
                      </tr>

                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
  </body>
</html>
