<!DOCTYPE html>
<html lang="en">

<head>

  <%-include('layouts/header'); %>

  <title>Edit information</title>

</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->

    <%-include ('layouts/navbar'); %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div class="main-content">

        <div class="page-content">
          <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
              <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                  <h4 class="mb-0 font-size-18">Edit information form</h4>
                </div>
              </div>
            </div>
            <!-- end page title -->

            <div class="row">

              <div class="col-12">

                <div class="card">
                  <form method="POST" action="/cities/edit/<%= dataCity.idCity %>" enctype="multipart/form-data">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-12 col-sm-auto mb-3">
                          <div class="mx-auto" style="width: 240px;">
                            <div class="d-flex justify-content-center align-items-center rounded"
                              style="height: 240px; background-color: rgb(233, 236, 239);">
                              <img id="img" src="<%= dataCity.image %>" alt='img'
                                class=" rounded mx-auto d-block" style="width: 240px; height: 240px; ">
                            </div>
                          </div>
                        </div>
                        <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                          <div class="mt-">
                            <label for="upload">
                              <span class="fas fa-upload" aria-hidden="true"></span>
                              <input type="file" id="upload" accept="image/*" name="image" style="display:none">
                            </label>
                          </div>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="example-text-input" class="col-md-2 col-form-label">ID</label>
                        <div class="col-md-10">
                          <input class="form-control" type="text" value="<%= dataCity.idCity %>"
                            id="example-text-input" readonly>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="example-text-input" class="col-md-2 col-form-label">Name</label>
                        <div class="col-md-10">
                          <input class="form-control" type="text" value="<%= dataCity.name %>"
                            id="example-text-input" name="name">
                        </div>
                      </div>
                      
                      <div class="form-group row">
                        <label for="example-text-input" class="col-md-2 col-form-label">Description</label>
                        <div class="col-md-10">
                          <textarea class="form-control" type="text"
                            id="example-text-input" name="description"><%= dataCity.description %></textarea>
                        </div>
                      </div>
                    </div>

                </div>

              </div> <!-- end col -->

            </div>
            <br>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
              Confirm
            </button>
            <button type="button" class="btn btn-secondary" onclick="history.back(-1)">Cancel
            </button>
            <!-- end row -->
          </div>
          <!-- end row -->

        </div> <!-- container-fluid -->
      </div>
      <!-- End Page-content -->

      <!-- Modal -->
      <div class=" modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Confirm</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Bạn có chắc chắn muốn chỉnh sửa?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Confirm</button>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

  <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class=" scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
  

</body>

</html>